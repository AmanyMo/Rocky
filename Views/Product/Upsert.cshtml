@model Rocky.Models.ViewModels.ProductVM

@{
    var title = "Create";
}

@if (Model.product.ID != 0)
{
    //edit
    title = "Edit";
}

<h2>@title</h2>
<br />
<h4>Product</h4>
<hr />
<div class="row">


    <div class="col-md-4">
        <form asp-action="Upsert" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @if (Model.product.ID != 0)
            {
                //edit


                <input type="hidden" asp-for="product.ID" />

            }



            <div class="form-group">
                <label asp-for="product.Name" class="control-label"></label>
                <input asp-for="product.Name" class="form-control" />
                <span asp-validation-for="product.Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="product.Description" class="control-label"></label>
                <textarea asp-for="product.Description" class="form-control summernote"></textarea>
                @* <input asp-for="product.Description" class="form-control" />*@
                <span asp-validation-for="product.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="product.Price" class="control-label"></label>
                <input asp-for="product.Price" class="form-control" />
                <span asp-validation-for="product.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="product.Image" class="control-label"></label>
                <input type="file" id="uploadbox" multiple class="form-control" />
                <span asp-validation-for="product.Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="product.CategoryId" class="control-label"></label>
                <select asp-for="product.CategoryId" class="form-control" asp-items="Model.ListItems">
                    <option disabled selected>--selected--</option>
                </select>
                <span asp-validation-for="product.CategoryId" class="text-danger"></span>
            </div>

            <div class="form-group">
                @if (Model.product.ID != 0)
                {
                    //Edit
                    <input type="submit" value="Save" class="btn btn-secondary" />

                }
                else
                {
                    <input type="submit" value="Create" class="btn btn-success" />
                }
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index"><i class="fas fa-arrow-circle-left"></i> &ensp;Back to List</a>
</div>

