@model IEnumerable<Rocky.Models.Product>
@{
    ViewData["Title"] = "Details";
}

<div class="container pt-2">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-dark">Product List</h2>
        </div>
        <div class="col-6">
            <a class="btn btn-primary" asp-action="Upsert"> <i class="fa-solid fa-circle-plus"></i> &ensp; Create New Category</a>
        </div>

    </div>

</div>


@if (Model.Count() > 0)
{
    
      <table class=" table table-bordered">
        <thead> 
            <tr>
                <th>Name</th>
                <th>Price</th>
                <th></th>

            </tr>
        </thead>
        <tbody>
            @foreach (var i in Model)
            {
                <tr>
                    <td>@i.Name</td>
                    <td>@i.Price</td>
                    <td></td>
                </tr>
            }
        </tbody>
            
      </table>
   

}
else
{
    <h1>No product Items</h1>
}